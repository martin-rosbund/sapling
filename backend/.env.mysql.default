# System
SAPLING_VERSION=0.1.266

# Database
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=dein_user
DB_PASSWORD=dein_passwort
DB_NAME=deine_datenbank
DB_DATA_SEEDER=demonstration
DB_LOGGING=false

# Security
SAPLING_SECRET=SICHERER_SCHLUESSEL_FUER_JWT_TOKEN
SAPLING_FRONTEND_URL=http://localhost:5173
SAPLING_HASH_INDICATOR=$2b$
SAPLING_HASH_COST=10

# Logging
LOG_OUTPUT_PATH=../log
LOG_BACKUP_FILES=14
LOG_LEVEL=info
LOG_NAME_REQUESTS=requests.log
LOG_NAME_SERVER=server.log
LOG_APPENDERS=console,file

# Azure AD
AZURE_AD_IDENTITY_METADATA=
AZURE_AD_CLIENT_ID=
