AZURE_AD_RESPONSE_TYPE=code
AZURE_AD_RESPONSE_MODE=form_post
AZURE_AD_REDIRECT_URL=http://localhost:3000/auth/azure/callback
AZURE_AD_ALLOW_HTTP=true
AZURE_AD_SCOPE=profile,openid,email,offline_access,User.Read,Calendars.ReadWrite

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
GOOGLE_SCOPE=profile,email,calendar.events

# AI
AI_PROVIDER=[openai, gemini]
AI_OPENAI_API_KEY=
AI_GEMINI_API_KEY=