{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "node",
      "request": "attach", 
      "port": 9229, 
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ],
  "compounds": [
    {
      "name": "Debug: Backend & Frontend",
      "configurations": ["Backend", "Frontend"]
    }
  ]
}